<!-- app/views/productions/new.html.erb -->

<h1>New Production</h1>

<%= form_with(model: @production, url: productions_path) do |form| %>
  <%= form.hidden_field :inventory_id %>
  <div class="field">
    <%= form.label :inventory_id %>
    <%= form.collection_select :inventory_id, Inventory.all, :id, :name, prompt: "Select an inventory" %>
  </div>

  <div class="field">
    <%= form.label :quantity_used %>
    <%= form.number_field :quantity_used %>
    <% if @production.errors[:quantity_used].any? %>
      <p class="error">
        <%= @production.errors[:quantity_used].first %>
      </p>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :production_date %>
    <%= form.date_field :production_date %>
  </div>

  <div class="actions">
    <%= form.submit "Create Production", class: "create-production-button" %>
    <%= link_to "Cancel", productions_path, class: "cancel-button" %>
  </div>
<% end %>

<style>
  /* Reset default margin and padding */
  body, h1, form, .field {
    margin: 0;
    padding: 0;
  }

  /* Set background color and text styles */
  body {
    background-color: #f0f0f0;
    font-family: Arial, sans-serif;
    color: #333;
  }

  /* Header styles */
  h1 {
    background-color: #333;
    color: #fff;
    padding: 20px;
    text-align: center;
  }

  /* Form styles */
  form {
    margin-top: 20px;
    padding: 20px;
    background-color: #fff;
  }

  /* Form field styles */
  .field {
    margin-bottom: 10px;
  }

  /* Form label styles */
  label {
    display: block;
    font-weight: bold;
  }

  /* Submit button styles */
  .create-production-button {
    display: block;
    margin-top: 20px;
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    text-decoration: none;
  }

  /* Cancel button styles */
  .cancel-button {
    display: block;
    margin-top: 10px;
    background-color: #ccc;
    color: #333;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    text-decoration: none;
  }

  /* Error message styles */
  .error {
    color: red;
    margin-top: 5px;
  }
</style>
