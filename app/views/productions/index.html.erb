<!-- app/views/productions/index.html.erb -->

<h1>Productions</h1>

<div class="productions-container">
  <%= link_to "New Production", new_production_path, class: "new-production-button" %>
  <table>
    <thead>
      <tr>
        <th>Inventory</th>
        <th>Quantity Used</th>
        <th>Production Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @productions.each do |production| %>
        <tr>
          <td><%= production.inventory.name %></td>
          <td><%= production.quantity_used %></td>
          <td><%= production.production_date.strftime("%d %b %Y") %></td>
          <td>
            <%= link_to "Show", production, class: "action-link" %>
            <%= link_to "Edit", edit_production_path(production), class: "action-link" %>
            <%= link_to "Delete", production, method: :delete, data: { confirm: "Are you sure you want to delete this production?" }, class: "action-link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  /* Reset default margin and padding */
  body, h1, table {
    margin: 0;
    padding: 0;
  }

  /* Set background color and text styles */
  body {
    background-color: #f0f0f0;
    font-family: Arial, sans-serif;
    color: #333;
  }

  /* Header styles */
  h1 {
    background-color: #333;
    color: #fff;
    padding: 20px;
    text-align: center;
  }

  /* Productions container styles */
  .productions-container {
    margin-top: 20px;
    padding: 20px;
    background-color: #fff;
  }

  /* New production button styles */
  .new-production-button {
    display: block;
    margin-bottom: 10px;
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    text-decoration: none;
  }

  /* Table styles */
  table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
  }

  th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ccc;
  }

  /* Table row hover effect */
  tbody tr:hover {
    background-color: #f5f5f5;
  }

  /* Table cell alignment */
  .center-align {
    text-align: center;
  }

  /* Action link styles */
  .action-link {
    display: inline-block;
    margin-right: 5px;
    text-decoration: none;
    color: #333;
    padding: 2px 5px;
    border: 1px solid #ccc;
    border-radius: 3px;
  }
</style>
