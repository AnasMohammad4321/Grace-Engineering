<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory</title>
  <style>
    /* Reset default margin and padding */
    body, h1, table {
      margin: 0;
      padding: 0;
    }

    /* Set background color and text styles */
    body {
      background-color: #f0f0f0;
      font-family: Arial, sans-serif;
      color: #333;
    }

    /* Header styles */
    h1 {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }

    /* Table styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #fff;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ccc;
    }

    th {
      background-color: #333;
      color: #fff;
    }

    /* Table row hover effect */
    tbody tr:hover {
      background-color: #f5f5f5;
    }

    /* Table cell alignment */
    .center-align {
      text-align: center;
    }

    /* Table cell width */
    .wide-cell {
      width: 150px;
    }

    /* Form styles */
    .form-container {
      margin-top: 20px;
      padding: 20px;
      background-color: #fff;
    }

    .form-container label,
    .form-container input,
    .form-container textarea,
    .form-container button {
      display: block;
      margin-bottom: 10px;
      width: 100%;
    }

    .form-container button {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    .form-container button:hover {
      background-color: #555;
    }

    /* Remove underline and blue color from inventory links */
    table a {
      text-decoration: none;
      color: #333;
    }

    /* Confirmation dialog styles */
    .confirmation-dialog {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 9999;
    }

    .confirmation-dialog-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      padding: 20px;
      text-align: center;
    }

    .confirmation-dialog-message {
      margin-bottom: 10px;
    }

    .confirmation-dialog-buttons {
      display: flex;
      justify-content: center;
    }

    .confirmation-dialog-buttons button {
      margin: 0 5px;
    }
  </style>
</head>
<body>
  <h1>Inventory</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th class="center-align wide-cell">Created At</th>
        <th class="center-align wide-cell">Updated At</th>
        <th class="center-align">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @inventories.each do |inventory| %>
        <tr>
          <td><a href="/inventories/<%= inventory.id %>"><%= inventory.id %></a></td>
          <td><a href="/inventories/<%= inventory.id %>"><%= inventory.name %></a></td>
          <td><a href="/inventories/<%= inventory.id %>"><%= inventory.description %></a></td>
          <td><a href="/inventories/<%= inventory.id %>"><%= inventory.quantity %></a></td>
          <td class="center-align"><a href="/inventories/<%= inventory.id %>"><%= inventory.created_at %></a></td>
          <td class="center-align"><a href="/inventories/<%= inventory.id %>"><%= inventory.updated_at %></a></td>
          <td class="center-align">
            <a href="/inventories/<%= inventory.id %>/edit">Edit</a>
            <a href="#" class="delete-link" data-inventory-id="<%= inventory.id %>">Delete</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-container">
    <a href="/inventories/new">New Inventory</a>
  </div>

  <div class="form-container">
    <a href="/inventories/new">Download as CSV</a>
  </div>


  <div class="confirmation-dialog">
    <div class="confirmation-dialog-content">
      <p class="confirmation-dialog-message">Are you sure you want to delete this inventory?</p>
      <div class="confirmation-dialog-buttons">
        <button class="confirm-delete">Delete</button>
        <button class="cancel-delete">Cancel</button>
      </div>
    </div>
  </div>

  <script>
    const deleteLinks = document.querySelectorAll('.delete-link');
    const confirmationDialog = document.querySelector('.confirmation-dialog');
    const confirmDeleteButton = document.querySelector('.confirm-delete');
    const cancelDeleteButton = document.querySelector('.cancel-delete');

    deleteLinks.forEach((link) => {
      link.addEventListener('click', (event) => {
        event.preventDefault();
        const inventoryId = link.getAttribute('data-inventory-id');
        showConfirmationDialog(inventoryId);
      });
    });

    confirmDeleteButton.addEventListener('click', () => {
      const inventoryId = confirmationDialog.getAttribute('data-inventory-id');
      deleteInventory(inventoryId);
    });

    cancelDeleteButton.addEventListener('click', hideConfirmationDialog);

    function showConfirmationDialog(inventoryId) {
      confirmationDialog.setAttribute('data-inventory-id', inventoryId);
      confirmationDialog.style.display = 'block';
    }

    function hideConfirmationDialog() {
      confirmationDialog.removeAttribute('data-inventory-id');
      confirmationDialog.style.display = 'none';
    }

    function deleteInventory(inventoryId) {
      const deleteUrl = '/inventories/' + inventoryId;
      fetch(deleteUrl, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
        }
      })
        .then(() => {
          window.location.reload();
        })
        .catch((error) => {
          console.error('Error deleting inventory:', error);
        });
    }
  </script>
</body>
</html>
